# Unix
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Pretty print the path

alias path='echo $PATH | tr -s ":" "\n"'
alias hey='tmux new -As main'

# trash comand
if (( +command[trash] )); then # if which trash &> /dev/null
  alias rm='trash -v'
  alias rm-list='trash-list'
else
  echo "'trash' command is not installed"
fi 